package scuts.ht.instances.std;

import scuts.ht.classes.Functor;


import scuts.ht.instances.std.StateT;

import scuts.core.States;
import scuts.core.Tuples;






class StateTFunctor<M,ST> implements Functor<M<State<ST,_>>> {

  var functorM:Functor<M>;

  public function new (functorM:Functor<M>)
  {
    this.functorM = functorM;
  }

  public function map<A,B>(v:StateT<M, ST, A>, f:A->B):StateT<M, ST, B>
  {


    return functorM.map(v, States.map.bind(_, f));
  }
}
